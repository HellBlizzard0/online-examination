<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:p="http://primefaces.org/ui" xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core" xmlns:util="http://java.sun.com/jsf/composite/util">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<h:outputStylesheet library="css" name="styles.css" />
	<h:outputStylesheet library="css" name="grid.css" />
	<h:outputStylesheet library="css" name="bootstrap.css" />

	<h:outputScript name="utilities.js" library="javascript" target="head" />
	<script type="text/javascript">
		var mode;
		function getDepartment() {
			mode = 1;
			openDepartmentsMiniSearch('#{request.contextPath}', 1, null, null);
			return false;
		}

		function getEmployee() {
			mode = 2;
			openEmpsMiniSearch('#{request.contextPath}', 1);
			return false;
		}

		function getNonEmployee(m) {
			mode = m;
			openNonEmpsMiniSearch('#{request.contextPath}', 1);
			return false;
		}

		function HandlePopupResult(ret) {
			unMaskScreen();
			if (ret != null) {
				if (mode == 1) {
					document.getElementById('formId:selectedDepartmentIdId').value = ret[0];
					document.getElementById('formId:selectedDepartmentNameId').innerHTML = ret[1];
					document
							.getElementById('formId:selectedDepartmentNameHiddenId').value = ret[1];
				} else if (mode == 2) {
					document.getElementById('formId:selectedEmployeeIdId').value = ret[0];
					document.getElementById('formId:selectedEmployeeNameId').innerHTML = ret[1];
					document
							.getElementById('formId:selectedEmployeeNameHiddenId').value = ret[1];
				} else if (mode == 3) {
					document.getElementById('formId:selectedNonEmployeeIdId').value = ret[0];
					document.getElementById('formId:selectedNonEmployeeNameId').value = ret[1];
					document.getElementById('formId:nonEmployeeIdentityId').value = ret[2];
					document
							.getElementById('formId:selectedNonEmployeeCountryNameId').value = ret[4];
					document.getElementById('formId:entryHiddenBtnId').click();
				} else if (mode == 4) {
					document.getElementById('formId:selectedNonEmployeeIdId').value = ret[0];
					document.getElementById('formId:selectedNonEmployeeNameId').value = ret[1];
					document.getElementById('formId:nonEmployeeIdentityId').value = ret[2];
					document
							.getElementById('formId:selectedNonEmployeeCountryNameId').value = ret[4];
					document.getElementById('formId:exitHiddenBtnId').click();
				}
				return true;
			}
			return false;
		}

		function confirmEntryDialog(data) {
			var nonEmpExists = document
					.getElementById('formId:nonEmpExistsHiddenId').value;
			if (data.status == 'success') {
				if (nonEmpExists == "1") {
					document.getElementById('formId:entryHiddenBtnId').click();
				} else if (nonEmpExists == "0") {
					getNonEmployee(3)
				}
			}
			return true;
		}

		function confirmExitDialog(data) {
			var nonEmpExists = document
					.getElementById('formId:nonEmpExistsHiddenId').value;
			if (data.status == 'success') {
				if (nonEmpExists == "1") {
					document.getElementById('formId:exitHiddenBtnId').click();
				} else if (nonEmpExists == "0") {
					getNonEmployee(4)
				}
			}
			return true;
		}

		function releaseMask() {
			unMaskScreen();
		}
	</script>
</h:head>
<h:body styleClass="screenBg">
	<h:form id="formId" dir="#{msgs.dir}">
		<ui:decorate template="/Main/Template.xhtml">
			<table border="0" cellpadding="0" cellspacing="0" width="100%">
				<tr>
					<td class="screenTitle">#{msgs.title_visitorsEntranceRegistration}</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td colspan="2">
						<table class="sectionTitle" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:outputText value="#{msgs.label_visitorEntranceData}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<h:panelGroup id="visitorEntrancePanelId">
							<table class="sectionContent" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<th width="15%">#{msgs.label_region}</th>
									<td width="30%">
										<h:outputText value="#{visitorsEntranceRegistration.loginEmpRegionName}" />
									</td>

								</tr>
								<tr>
									<th width="15%">
										#{msgs.label_visitorCardNumber}
										<h:outputText value="*" style="color:red;" />
									</th>
									<td width="20%">
										<h:inputText styleClass="form-control" value="#{visitorsEntranceRegistration.visitorEntranceData.visitorCardNumber}" maxlength="20" />
									</td>

									<td width="50%"></td>
								</tr>

								<tr>
									<th width="15%">#{msgs.label_employeeToVisit}</th>
									<td width="20%">
										<h:commandButton value="&#xf002;" styleClass="btn btn-trans-icon" onclick="return getEmployee();" />
										<h:inputHidden id="selectedEmployeeIdId" value="#{visitorsEntranceRegistration.visitorEntranceData.employeeId}" />
										<h:outputText id="selectedEmployeeNameId" value="#{visitorsEntranceRegistration.employeeName}" />
										<h:inputHidden id="selectedEmployeeNameHiddenId" value="#{visitorsEntranceRegistration.employeeName}" />
									</td>
								</tr>

								<tr>
									<th width="15%">#{msgs.label_departmentToVisit}</th>
									<td width="20%">
										<h:commandButton value="&#xf002;" styleClass="btn btn-trans-icon" onclick="return getDepartment();" />
										<h:inputHidden id="selectedDepartmentIdId" value="#{visitorsEntranceRegistration.visitorEntranceData.departmentId}" />
										<h:outputText id="selectedDepartmentNameId" value="#{visitorsEntranceRegistration.visitorEntranceData.departmentName}" />
										<h:inputHidden id="selectedDepartmentNameHiddenId" value="#{visitorsEntranceRegistration.visitorEntranceData.departmentName}" />
									</td>
								</tr>

								<tr>
									<th width="15%">
										#{msgs.label_identity}
										<h:outputText value="*" style="color:red;" />
									</th>
									<td width="20%">
										<h:inputText id="nonEmployeeIdentityId" styleClass="form-control inputnumber" value="#{visitorsEntranceRegistration.visitorEntranceData.visitorIdentity}" maxlength="10" onkeypress="return checkDigit(event)" />
										<h:inputHidden id="selectedNonEmployeeIdId" value="#{visitorsEntranceRegistration.visitorEntranceData.visitorId}" />
										<h:inputHidden id="selectedNonEmployeeNameId" value="#{visitorsEntranceRegistration.visitorEntranceData.visitorName}" />
										<h:inputHidden id="selectedNonEmployeeCountryNameId" value="#{visitorsEntranceRegistration.visitorEntranceData.visitorCountryName}" />
									</td>
								</tr>
							</table>
						</h:panelGroup>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td width="100%">
						<table class="actionsSection" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:commandButton styleClass="btn btn-default" style="background-color: green!important;" id="entryBtnId" value="#{msgs.label_newEntryRegister}" action="#{visitorsEntranceRegistration.validateSocialId()}">
										<f:ajax render="formId:nonEmpExistsHiddenId formId:visitorEntrancePanelId" execute="formId:visitorEntrancePanelId" onevent="confirmEntryDialog" />
									</h:commandButton>
									<h:commandButton id="entryHiddenBtnId" style="display:none;" action="#{visitorsEntranceRegistration.entryRegister()}">
										<f:ajax execute="formId:visitorEntrancePanelId" render="formId:visitorEntrancePanelId formId:visitorEntranceDataTableId" />
									</h:commandButton>

									<h:inputHidden value="#{visitorsEntranceRegistration.nonEmpExistsFlag}" id="nonEmpExistsHiddenId" />

									<h:commandButton styleClass="btn btn-default" style="background-color: red!important;" id="exitBtnId" value="#{msgs.label_newExitRegister}" action="#{visitorsEntranceRegistration.validateSocialId()}">
										<f:ajax render="formId:nonEmpExistsHiddenId formId:visitorEntrancePanelId" execute="formId:visitorEntrancePanelId" onevent="confirmExitDialog" />
									</h:commandButton>
									<h:commandButton id="exitHiddenBtnId" style="display:none;" action="#{visitorsEntranceRegistration.exitRegister()}">
										<f:ajax execute="formId:visitorEntrancePanelId" render="formId:visitorEntrancePanelId formId:visitorEntranceDataTableId" />
									</h:commandButton>
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<p:dataTable reflow="true" tableStyle="table-layout: auto" paginator="true" id="visitorEntranceDataTableId" rows="10" rowIndexVar="index" var="row" value="#{visitorsEntranceRegistration.visitorEntranceList}" rowHover="true">
							<p:column styleClass='centerText'>
								<f:facet name="header">#</f:facet>
                                #{index + 1}
                            </p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_identity} </f:facet>
								<h:outputText value="#{row.visitorIdentity}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_name} </f:facet>
								<h:outputText value="#{row.visitorName}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_visitorCardNumber} </f:facet>
								<h:outputText value="#{row.visitorCardNumber}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_nationality} </f:facet>
								<h:outputText value="#{row.visitorCountryName}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_departmentToVisit} </f:facet>
								<h:outputText value="#{row.departmentName}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_entryDateAndTime} </f:facet>
								<h:outputText value="#{row.entryDateString} #{row.entryTime}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_exitDateAndTime} </f:facet>
								<h:outputText value="#{row.exitDateString} #{row.exitTime}" />
							</p:column>
						</p:dataTable>
					</td>
				</tr>
			</table>
		</ui:decorate>
	</h:form>
</h:body>
</html>