<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:p="http://primefaces.org/ui" xmlns:f="http://java.sun.com/jsf/core" xmlns:ui="http://java.sun.com/jsf/facelets">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<h:outputStylesheet library="css" name="styles.css" />
	<h:outputStylesheet library="css" name="grid.css" />
	<h:outputStylesheet library="css" name="bootstrap.css" />

	<h:outputScript name="utilities.js" library="javascript" target="head" />
	<script type="text/javascript">
          window.onkeypress = function(e) {
			  var keyCode = window.event.keyCode || e.keyCode || e.which;
		      if (keyCode == '13') {
		    	  document.getElementById('formId:searchEmpBtnID').click();
		    	  return false;
		      }
		  };
		            
          function selectEmployee(callerId){
            var idTokens = callerId.split(':');
            var empId = document.getElementById('formId:empListDataTableId:'+idTokens[2]+':empId').value;
            var empName = document.getElementById('formId:empListDataTableId:'+idTokens[2]+':empName').innerHTML;
            var empSocial = document.getElementById('formId:empListDataTableId:'+idTokens[2]+':empSocial').innerHTML;
            var empMilitaryNumber = document.getElementById('formId:empListDataTableId:'+idTokens[2]+':empMilitaryNumber').innerHTML;
            var empRank = document.getElementById('formId:empListDataTableId:'+idTokens[2]+':empRank').innerHTML;
            returnVal = new Array();
            
            returnVal[0] = empId;
            returnVal[1] = empName;
            returnVal[2] = empSocial;
            returnVal[3] = empMilitaryNumber;
            returnVal[4] = empRank;
            window.returnValue = returnVal;
            
            window.opener.HandlePopupResult(returnVal);
            window.close();
          }

          function selectEmployees(employeesList){
              returnVal = new Array();
              returnVal[0] = document.getElementById('formId:selecteEmployeeIdsId').value;
              window.returnValue = returnVal;
              window.opener.HandlePopupResult(returnVal);
              window.close();
            }

          window.onunload = unloadPage;

          function unloadPage()
          {
        	  window.opener.releaseMask();
          }
        </script>
</h:head>
<h:body styleClass="screenBg" onunload="unloadPage();">
	<h:form id="formId" dir="#{msgs.dir}">
		<ui:decorate template="/Main/TemplateMiniSearch.xhtml">

			<table border="0" cellpadding="0" cellspacing="0" width="100%" class="bgcolor-pup">
				

				<tr>
					<td class="screenTitle">
						<h:outputText value="#{msgs.title_empsInquiry}" />
					</td>
				</tr>

				<tr>
					<td width="100%">
						<h:panelGroup id="empSearchPanelId">
							<table class="sectionContent" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<th width="15%">#{msgs.label_name}</th>
									<td width="20%">
										<h:inputText styleClass="form-control" value="#{empsMiniSearch.searchEmpName}" />
									</td>
									
									<th width="15%">#{msgs.label_socialNumber}</th>
									<td width="20%">
										<h:inputText maxlength="10" styleClass="form-control" value="#{empsMiniSearch.searchEmpSocialId}" />
									</td>

								</tr>
								<tr>
									<th width="15%">#{msgs.label_militaryNumber}</th>
									<td width="20">
										<h:inputText maxlength="10" styleClass="form-control" value="#{empsMiniSearch.searchEmpMilitaryNumber}" />
									</td>
									<td width="15%" colspan="6"></td>
								</tr>
							</table>
						</h:panelGroup>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<table class="actionsSection" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:commandButton id="resetBtnId" styleClass="btn btn-default" value="&#xf021; #{msgs.label_reset}" action="#{empsMiniSearch.resetSearch()}">
										<f:ajax render="formId:empSearchPanelId" />
									</h:commandButton>

									<h:commandButton id="searchEmpBtnID" styleClass="btn btn-default" action="#{empsMiniSearch.searchEmployee()}" value="&#xf002; #{msgs.label_search}">
										<f:ajax render="formId:empListId formId:empListMultiId formId:notifyMessagesId" execute="formId:empSearchPanelId" />
									</h:commandButton>
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td width="100%">
						<h:panelGroup id="empListId">
							<p:dataTable id="empListDataTableId" reflow="true" tableStyle="table-layout: auto" paginator="true" rows="#{empsMiniSearch.rowsCount}" rowIndexVar="index" var="row" value="#{empsMiniSearch.searchEmployeeList}" lazy="true" rowHover="true">
								<p:column style="text-align: center;">
									<f:facet name="header">#</f:facet>
	                               	 	#{index + 1}
	                            	</p:column>

								<p:column>
									<f:facet name="header">#{msgs.label_socialNumber}</f:facet>
									<h:outputText value="#{row.socialID}" id="empSocial" />
								</p:column>
								<p:column>
									<f:facet name="header">#{msgs.label_name}</f:facet>
									<h:outputText id="empName" value="#{row.fullName}" />
									<h:inputHidden id="empId" value="#{row.empId}" />
								</p:column>
								<p:column>
									<f:facet name="header">#{msgs.label_actualDepartment}</f:facet>
									<h:outputText id="empDep" value="#{row.actualDepartmentName}" />
								</p:column>
								<p:column>
									<f:facet name="header">#{msgs.label_militaryNumber}</f:facet>
									<h:outputText value="#{row.militaryNo}" id="empMilitaryNumber" />
								</p:column>
								<p:column>
									<f:facet name="header">#{msgs.label_rank}</f:facet>
									<h:outputText value="#{row.rank}" id="empRank" />
								</p:column>
								<p:column rendered="#{not empsMiniSearch.multipleSelection}">
									<f:facet name="header">#{msgs.label_select}</f:facet>
									<h:commandButton class="btn btn-success" onclick="selectEmployee(this.id); return false;" value="&#xf00c;" title="#{msgs.label_selectEmp}" />
								</p:column>
								<p:column rendered="#{empsMiniSearch.multipleSelection}">
									<f:facet name="header">#{msgs.label_select}</f:facet>
									<h:commandButton class="btn btn-success" value="&#xf00c;" title="#{msgs.label_selectEmp}" action="#{empsMiniSearch.addSelectedEmployee(row)}">
										<f:ajax render="formId:empListMultiId formId:empListId" />
									</h:commandButton>
								</p:column>
							</p:dataTable>
						</h:panelGroup>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<h:panelGroup rendered="#{empsMiniSearch.multipleSelection}">
							<table class="sectionTitle" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<td>
										<h:outputText value="#{msgs.title_selectedEmployees}" />
									</td>
								</tr>
							</table>
						</h:panelGroup>
					</td>
				</tr>


				<tr>
					<td width="100%">
						<h:panelGroup id="empListMultiId">
							<h:panelGroup rendered="#{empsMiniSearch.multipleSelection}">
								<p:dataTable reflow="true" tableStyle="table-layout: auto" paginator="true" rows="#{empsMiniSearch.rowsCount}" rowIndexVar="index" var="row" value="#{empsMiniSearch.selectedEmployeesList}" lazy="true" rowHover="true">
									<p:column style="text-align: center;">
										<f:facet name="header">#</f:facet>
                               	 		#{index + 1}
                            		</p:column>

									<p:column>
										<f:facet name="header">#{msgs.label_socialNumber}</f:facet>
										<h:outputText value="#{row.socialID}" id="empSocial" />
									</p:column>
									<p:column>
										<f:facet name="header">#{msgs.label_name}</f:facet>
										<h:outputText id="empName" value="#{row.fullName}" />
										<h:inputHidden id="empId" value="#{row.empId}" />
									</p:column>
									<p:column>
										<f:facet name="header">#{msgs.label_actualDepartment}</f:facet>
										<h:outputText id="empDep" value="#{row.actualDepartmentName}" />
									</p:column>
									<p:column>
										<f:facet name="header">#{msgs.label_militaryNumber}</f:facet>
										<h:outputText value="#{row.militaryNo}" id="empMilitaryNumber" />
									</p:column>
									<p:column>
										<f:facet name="header">#{msgs.label_rank}</f:facet>
										<h:outputText value="#{row.rank}" id="empRank" />
									</p:column>
									<p:column>
										<f:facet name="header">#{msgs.label_delete}</f:facet>
										<h:commandButton class="btn btn-success" value="&#xf00d;" title="#{msgs.label_delete}" action="#{empsMiniSearch.removeSelectedEmployee(row)}">
											<f:ajax render="formId:empListMultiId" />
										</h:commandButton>
									</p:column>
								</p:dataTable>
							</h:panelGroup>
						</h:panelGroup>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<h:panelGroup rendered="#{empsMiniSearch.multipleSelection}">
							<table class="actionsSection" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<td>
										<h:commandButton class="btn btn-success" id="returnSelected" styleClass="btn btn-default" value="&#xf00c; #{msgs.label_select}" action="#{empsMiniSearch.selectMultiEmployee()}">
											<f:ajax render="@form" execute="@form" onevent="function(e){if(e.status == 'success') selectEmployees();}" />
										</h:commandButton>
										<h:inputHidden id="selecteEmployeeIdsId" value="#{empsMiniSearch.selectedEmployeeIds}" />
									</td>
								</tr>
							</table>
						</h:panelGroup>
					</td>
				</tr>
			</table>
		</ui:decorate>
	</h:form>
</h:body>
</html>