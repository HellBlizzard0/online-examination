<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:p="http://primefaces.org/ui" xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core" xmlns:util="http://java.sun.com/jsf/composite/util">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<h:outputStylesheet library="css" name="styles.css" />
	<h:outputStylesheet library="css" name="grid.css" />
	<h:outputStylesheet library="css" name="bootstrap.css" />
	<h:outputScript name="utilities.js" library="javascript" target="head" />
	<script type="text/javascript">
		var mode;
		function openCommunicationNodes(contextPath, followUpId) {
			mode = 3;
			var modeCommunication = 1;
			var followUp = followUpId;
			openCommunicationNodesMiniSearch(contextPath, followUp, modeCommunication);
			return false;
		}
		function releaseMask() {
			unMaskScreen();
		}
	</script>
</h:head>
<h:body styleClass="screenBg">
	<h:form id="directFollowUpsSearchFormId" dir="#{msgs.dir}">
		<ui:decorate template="/Main/Template.xhtml">
			<table border="0" cellpadding="0" cellspacing="0" width="100%">

				<tr>
					<td class="screenTitle">#{msgs.label_directFollowUps}</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td colspan="2">
						<table class="sectionTitle" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:outputText value="#{msgs.label_directFollowUps}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td>
						<p:dataTable  reflow="true" tableStyle="table-layout: auto"  paginator="true" id="directFollowUpsDataTableId" rows="10" rowIndexVar="index" var="row" value="#{directFollowUps.directFollowUpList}"  rowHover="true" filteredValue="#{directFollowUps.filteredDirectFollowUpList}" widgetVar="directFollowUpsTable">
							<p:ajax event="filter"  update="directFollowUpsSearchFormId:numberOfGhostsId directFollowUpsSearchFormId:directFollowUpsDataTableId"/>
							<p:column styleClass='centerText'>
								<f:facet name="header">#</f:facet>
                                #{index + 1}
                            </p:column>
							<p:column styleClass='centerText' filterBy="#{row.contactNumber}" filterMatchMode="contains" >
								<f:facet name="header">#{msgs.label_contactNumber} 
								</f:facet>
								<h:outputText value="#{row.contactNumber}" />
							</p:column>
							<p:column styleClass='centerText' filterBy="#{row.code}" filterMatchMode="contains">
								<f:facet name="header">#{msgs.label_followUpCode} </f:facet>
								<h:outputText value="#{row.code}" />
							</p:column>
							<p:column styleClass='centerText' filterBy="#{row.employeeName}" filterMatchMode="contains">
								<f:facet name="header">#{msgs.label_ghostName} </f:facet>
								<h:outputText value="#{row.employeeName}" />
							</p:column>
							<p:column styleClass='centerText' filterBy="#{row.regionName}" filterMatchMode="exact">
								<f:facet name="filter">
									<p:selectOneMenu onchange="PF('directFollowUpsTable').filter()" style="width:100%">
										<f:selectItem itemLabel="#{msgs.label_all}" itemValue="#{null}" noSelectionOption="true" />
										<f:selectItems var="resultType" itemLabel="#{resultType.label}" itemValue="#{resultType.description}" value="#{directFollowUps.regionsList}" />
									</p:selectOneMenu>
								</f:facet>
								<f:facet name="header">#{msgs.label_region} </f:facet>
								<h:outputText value="#{row.regionName}" style="width:100%" />
							</p:column>
							<p:column styleClass='centerText' filterBy="#{row.followUpNetworkNum}" filterMatchMode="exact">
								<f:facet name="filter">
									<p:selectOneMenu onchange="PF('directFollowUpsTable').filter()" style="width:100%">
										<f:selectItem itemLabel="#{msgs.label_all}" itemValue="#{null}" noSelectionOption="true" />
										<f:selectItems var="resultType" itemLabel="#{resultType.label}" itemValue="#{resultType.description}" value="#{directFollowUps.networkList}" />
									</p:selectOneMenu>
								</f:facet>
								<f:facet name="header">#{msgs.label_network} </f:facet>
								<h:outputText value="#{row.followUpNetworkNum}" style="width:100%" />
							</p:column>
							<p:column styleClass='centerText' filterBy="#{row.casesTypeDesc}" filterMatchMode="exact">
								<f:facet name="filter">
									<p:selectOneMenu onchange="PF('directFollowUpsTable').filter()" style="width:100%">
										<f:selectItem itemLabel="#{msgs.label_all}" itemValue="#{null}" noSelectionOption="true" />
										<f:selectItems var="resultType" itemLabel="#{resultType.label}" itemValue="#{resultType.description}" value="#{directFollowUps.caseTypesList}" />
									</p:selectOneMenu>
								</f:facet>
								<f:facet name="header">#{msgs.label_casesType} </f:facet>
								<h:outputText value="#{row.casesTypeDesc}" style="width:100%" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header"> #{msgs.label_endingDate} </f:facet>
								<h:outputText value="#{row.followUpEndDateString}" style="width:100%" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header"> #{msgs.label_contactCodes} </f:facet>
								<h:commandButton id="contactCodeBtnId" value="&#xf095;" styleClass="btn btn-trans-icon" onclick="return openCommunicationNodes('#{request.contextPath}','#{row.id}');" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header"> #{msgs.label_details} </f:facet>
								<h:commandButton id="detailsBtnId" value="&#xf06e;" styleClass="btn btn-trans-icon" onclick="this.form.target='_blank'" action="#{directFollowUps.viewDirectFollowUp(row.id)}" />
							</p:column>

							<p:column styleClass='centerText'>
								<f:facet name="header"> #{msgs.label_edit} </f:facet>
								<h:commandButton id="viewEditBtnId" value="&#xf14b;" styleClass="btn btn-trans-icon" onclick="this.form.target='_blank'" action="#{directFollowUps.editDirectFollowUp(row.id)}" />
							</p:column>

						</p:dataTable>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<table class="sectionContent" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<th width="15%">#{msgs.label_numberOfGhosts}</th>
								<td width="20%">
									<h:outputText  id="numberOfGhostsId" value="#{directFollowUps.filteredDirectFollowUpList.size()}" />
								</td>
								<td>
									<h:commandButton id="printBtnId" action="#{directFollowUps.print()}"  style = "margin-right: 600px;" value="&#xf02f; #{msgs.label_print}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
		</ui:decorate>
	</h:form>
</h:body>
</html>