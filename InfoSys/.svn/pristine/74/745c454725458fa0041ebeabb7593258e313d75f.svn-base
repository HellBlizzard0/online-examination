<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:p="http://primefaces.org/ui" xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core" xmlns:util="http://java.sun.com/jsf/composite/util">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<h:outputStylesheet library="css" name="styles.css" />
	<h:outputStylesheet library="css" name="grid.css" />
	<h:outputStylesheet library="css" name="bootstrap.css" />
	<h:outputScript name="utilities.js" library="javascript" target="head" />
	<script type="text/javascript">
		function openFollowUpMiniSearchScreen(contextPath) {
			m = 1;
			openFollowUpMiniSearch(contextPath);
			return false;
		}

		function HandlePopupResult(ret) {
			unMaskScreen();
			if (ret != null) {
				if (m == 1) {
					document.getElementById('formId:selectedFollowUpId').value = ret[0];
					document.getElementById('formId:selectedFollowUpCodeId').value = ret[1];
					return true;
				}
				return false;
			}
		}

		function releaseMask() {
			unMaskScreen();
		}
	</script>
</h:head>
<h:body styleClass="screenBg">
	<h:form id="formId" dir="#{msgs.dir}">
		<ui:decorate template="/Main/Template.xhtml">
			<table border="0" cellpadding="0" cellspacing="0" width="100%">
				<tr>
					<td class="screenTitle">#{msgs.title_conversationsInDuration}</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td colspan="2">
						<table class="sectionTitle" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:outputText value="#{msgs.label_searchData}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<h:panelGroup id="followUpsReportContainer">
							<table class="sectionContent" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<th width="15%">#{msgs.label_followUp}</th>
									<td width="20%">
										<h:inputText style="width:90%" disabled="true" id="selectedFollowUpCodeId" value="#{conversationReport.selectedFollowUpCode}" />
										<h:inputHidden id="selectedFollowUpId" value="#{conversationReport.followUpId}" />
										<h:commandButton value="&#xf002;" styleClass="btn btn-trans-icon" onclick="return openFollowUpMiniSearchScreen('#{request.contextPath}');" />
									</td>
									<th width="10%">
										<h:outputText value="#{msgs.label_followUpCode}" />
									</th>
									<td width="40%">
										<h:inputText id="followUpCodeId" value="#{conversationReport.followUpCode}" />
									</td>
								</tr>
								<tr>
									<th width="15%">
										#{msgs.label_fromDate}
										<h:outputText value="*" style="color:red;" />
									</th>
									<td width="20%">
										<util:advancedHijriDate value="#{conversationReport.fromDate}" />
									</td>

									<th width="15%">
										#{msgs.label_toDate}
										<h:outputText value="*" style="color:red;" />
									</th>
									<td width="20%">
										<util:advancedHijriDate value="#{conversationReport.toDate}" />
									</td>

								</tr>
								<tr>
									<th width="10%">
										<h:outputText value="#{msgs.label_followUpResultType}" />
									</th>
									<td width="40%">
										<h:selectOneMenu id="resultTypeId" styleClass="form-control" value="#{conversationReport.conversationResult}">
											<f:selectItem itemLabel="#{msgs.label_all}" itemValue="#{null}" />
											<f:selectItem itemLabel="#{msgs.label_conversationNoResults}" itemValue="#{conversationReport.convNoResultType}" />
											<f:selectItem itemLabel="#{msgs.label_positive}" itemValue="#{conversationReport.convPosResultType}" />
											<f:selectItem itemLabel="#{msgs.label_negative}" itemValue="#{conversationReport.convNegResultType}" />
										</h:selectOneMenu>
									</td>
									<th width="10%">
										<h:outputText value="#{msgs.label_actionType}" />
									</th>
									<td width="40%">
										<h:selectOneMenu id="actionTakenId" style="width:60%;" value="#{conversationReport.domainIdChatAction}">
											<f:selectItem itemLabel="" itemValue="" />
											<f:selectItems value="#{conversationReport.chatActionsDomainList}" var="action" itemLabel="#{action.description}" itemValue="#{action.id}" />
										</h:selectOneMenu>
									</td>
								</tr>
							</table>
						</h:panelGroup>
					</td>
				</tr>
				<tr>
					<td width="100%" height="5" />
				</tr>
				<tr>
					<td width="100%">
						<table class="actionsSection" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:commandButton styleClass="btn btn-default" id="resetBtn" value="&#xf021; #{msgs.label_reset}" action="#{conversationReport.reset()}">
										<f:ajax render="formId:followUpsReportContainer" />
									</h:commandButton>
									<h:commandButton styleClass="btn btn-default" id="printBtn" value="&#xf02f; #{msgs.label_print}" action="#{conversationReport.printReport()}">
									</h:commandButton>
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
		</ui:decorate>
	</h:form>
</h:body>
</html>