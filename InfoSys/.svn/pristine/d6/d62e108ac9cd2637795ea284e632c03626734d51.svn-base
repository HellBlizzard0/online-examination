<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core" xmlns:util="http://java.sun.com/jsf/composite/util" xmlns:rich="http://richfaces.org/rich">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<h:outputStylesheet library="css" name="styles.css" />
	<h:outputStylesheet library="css" name="bootstrap.css" />
	<h:outputScript name="utilities.js" library="javascript" target="head" />
	<script type="text/javascript">
		function getDepartment(contextPath) {
			openDepartmentsMiniSearch(contextPath, 2, null, [ 1, 2 ]);
			return false;
		}

		function releaseMask() {
			unMaskScreen();
		}

		function HandlePopupResult(ret) {
			unMaskScreen();
			if (ret != null) {
				document.getElementById('formId:departmentSearchIdId').value = ret[0];
				document
						.getElementById('formId:selectedDepartmentSearchNameId').value = ret[1];
				document.getElementById('formId:departmentSearchNameId').value = ret[1];
				return true;
			}
			return false;
		}
	</script>
</h:head>
<h:body styleClass="screenBg">
	<h:form id="formId" dir="#{msgs.dir}">
		<ui:decorate template="/Main/Template.xhtml">

			<table border="0" cellpadding="0" cellspacing="0" width="100%">
				<tr>
					<td width="100%" height="5" />
				</tr>
				<tr>
					<td class="screenTitle">#{msgs.title_exemptsReport}</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td colspan="2">
						<table class="sectionTitle" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:outputText value="#{msgs.label_searchData}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<h:panelGroup id="searchContainerId">
							<table class="sectionContent" border="0" cellpadding="0" cellspacing="0">

								<tr>
									<th width="15%">#{msgs.label_region}</th>
									<td width="35%">
										<h:inputText rendered="#{empty exemptsReport.employeeRegionName}" style="width:85%" disabled="true" id="departmentSearchNameId" value="#{exemptsReport.regionName}" />
										<h:commandButton rendered="#{empty exemptsReport.employeeRegionName}" value="&#xf03a;" styleClass="btn btn-trans-icon" id="searchDepartmentBtnId" onclick="return getDepartment('#{request.contextPath}');" />
										<h:inputHidden id="departmentSearchIdId" value="#{exemptsReport.regionId}" />
										<h:inputHidden id="selectedDepartmentSearchNameId" value="#{exemptsReport.regionName}" />
										<h:outputText rendered="#{not empty exemptsReport.employeeRegionName}" value="#{exemptsReport.employeeRegionName}" />
									</td>
								</tr>

								<tr>
									<th width="15%">
										#{msgs.label_promotionFromDate}
										<h:outputText value="*" style="color:red;" />
									</th>
									<td width="35%">
										<util:advancedHijriDate value="#{exemptsReport.fromDate}" />
									</td>
									<th width="15%">
										#{msgs.label_to}
										<h:outputText value="*" style="color:red;" />
									</th>
									<td width="35%">
										<util:advancedHijriDate value="#{exemptsReport.toDate}" />
									</td>
								</tr>

							</table>
						</h:panelGroup>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td width="100%">
						<table class="actionsSection" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td width="100%">
									<h:commandButton class="btn btn-success" value="&#xf021; #{msgs.label_reset}" title="#{msgs.label_reset}" action="#{exemptsReport.reset()}">
										<f:ajax render="formId:searchContainerId" />
									</h:commandButton>
									<h:commandButton class="btn btn-success" value="&#xf02f; #{msgs.label_print}" title="#{msgs.label_print}" action="#{exemptsReport.printReport()}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>

			</table>
		</ui:decorate>
	</h:form>
</h:body>
</html>