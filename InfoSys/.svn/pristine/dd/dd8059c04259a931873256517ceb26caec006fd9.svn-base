<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:p="http://primefaces.org/ui" xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core" xmlns:util="http://java.sun.com/jsf/composite/util">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

	<h:outputStylesheet library="css" name="styles.css" />
	<h:outputStylesheet library="css" name="grid.css" />
	<h:outputStylesheet library="css" name="bootstrap.css" />

	<h:outputScript name="utilities.js" library="javascript" target="head" />
</h:head>
<h:body styleClass="screenBg">
	<h:form id="formId" dir="#{msgs.dir}">
		<ui:decorate template="/Main/Template.xhtml">
			<table border="0" cellpadding="0" cellspacing="0" width="100%">
				<tr>
					<td class="screenTitle">#{msgs.title_infoRewardReport}</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td colspan="2">
						<table class="sectionTitle" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:outputText value="#{msgs.label_reportData}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<h:panelGroup id="reportParametersPanelId">
							<table class="sectionContent" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<th width="15%">#{msgs.label_region}</th>
									<td width="20%">
										<h:selectOneMenu rendered="#{empty informationRewardReport.employeeRegionName}" id="regionMenuId" value="#{informationRewardReport.regionId}">
											<f:selectItem itemValue="-1" itemLabel="#{msgs.label_all}" />
											<f:selectItems value="#{informationRewardReport.regionList}" var="var" itemLabel="#{var.arabicName}" itemValue="#{var.id}" />
											<f:ajax render="formId:sectorPanelId" execute="formId:regionMenuId" listener="#{informationRewardReport.getSectors()}" />
										</h:selectOneMenu>

										<h:outputText rendered="#{not empty informationRewardReport.employeeRegionName}" value="#{informationRewardReport.employeeRegionName}" />
									</td>


									<th width="15%">#{msgs.label_sectorUnit}</th>
									<td width="20%">
										<h:panelGroup id="sectorPanelId">
											<h:selectOneMenu value="#{informationRewardReport.sectorId}">
												<f:selectItem itemValue="-1" itemLabel="#{msgs.label_all}" />
												<f:selectItems value="#{informationRewardReport.sectorList}" var="var" itemLabel="#{var.arabicName}" itemValue="#{var.id}" />
											</h:selectOneMenu>
										</h:panelGroup>
									</td>

								</tr>

								<tr>
									<th width="15%">
										#{msgs.label_durationFrom}
										<h:outputText value="*" style="color:red;" />
									</th>
									<td width="20%">
										<util:advancedHijriDate value="#{informationRewardReport.startDate}" />
									</td>


									<th width="15%">
										#{msgs.label_durationTo}
										<h:outputText value="*" style="color:red;" />
									</th>
									<td width="20%">
										<util:advancedHijriDate value="#{informationRewardReport.endDate}" />
									</td>

								</tr>
								<tr>
									<th width="15%">#{msgs.label_assignmentType}</th>
									<td width="20%">
										<h:selectOneMenu value="#{informationRewardReport.assignmentType}" styleClass="form-control">
											<f:selectItem itemValue="-1" itemLabel="#{msgs.label_all}" />
											<f:selectItem itemLabel="#{msgs.label_assignment}" itemValue="#{informationRewardReport.assignment}" />
											<f:selectItem itemLabel="#{msgs.label_cooperator}" itemValue="#{informationRewardReport.cooperetor}" />
										</h:selectOneMenu>
									</td>
								</tr>
							</table>
						</h:panelGroup>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td width="100%">
						<table class="actionsSection" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:commandButton styleClass="btn btn-default" value="&#xf021; #{msgs.label_reset}" action="#{informationRewardReport.reset()}">
										<f:ajax render="formId:reportParametersPanelId" />
									</h:commandButton>

									<h:commandButton styleClass="btn btn-success" value="&#xf0f6; #{msgs.label_printStatisticalReport}" action="#{informationRewardReport.printStatisticalReport()}" />

									<h:commandButton styleClass="btn btn-success" value="&#xf02f; #{msgs.label_print}" action="#{informationRewardReport.printReport()}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>
			</table>
		</ui:decorate>
	</h:form>
</h:body>
</html>