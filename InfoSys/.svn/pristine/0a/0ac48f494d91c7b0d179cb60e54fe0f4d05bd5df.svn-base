<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:p="http://primefaces.org/ui" xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core" xmlns:util="http://java.sun.com/jsf/composite/util">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

	<h:outputStylesheet library="css" name="styles.css" />
	<h:outputStylesheet library="css" name="grid.css" />
	<h:outputStylesheet library="css" name="bootstrap.css" />
	
	<h:outputScript name="utilities.js" library="javascript" target="head" />
	<script type="text/javascript">
	   	function afterInsertConfig()
        {
	   		index = document.getElementById('configurationFormId:ConfigListSize').value;
            var configCodeEditId="configurationFormId\\:ConfigsList\\:"+index+"\\:configCodeEditId";
            $('#'+configCodeEditId).focus();
        }
     </script>
</h:head>
<h:body styleClass="screenBg">
	<h:form id="configurationFormId" dir="#{msgs.dir}">
		<ui:decorate template="/Main/Template.xhtml">
		
			<table border="0" cellpadding="0" cellspacing="0" width="100%">
				<tr>
					<td width="100%" height="0" />
				</tr>
				
				<tr>
					<td class="screenTitle">#{msgs.title_configurationSetup}</td>
				</tr>
				
				<tr>
					<td width="100%" height="5" />
				</tr>
				
				<tr>
					<td colspan="2">
						<table class="sectionTitle" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:outputText value="#{msgs.label_searchData}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>
				
				<tr>
					<td width="100%" height="5" />
				</tr>
				
				<tr>
					<td>
						<h:panelGroup id="searchContainerId">
							<table class="sectionContent" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<th width="15%">#{msgs.label_code}</th>
									<td width="20%">
										<h:inputText styleClass="form-control" value="#{configurations.code}" />
									</td>
									<td width="15%">
									</td>
									<th width="15%">#{msgs.label_value}</th>
									<td width="20%">
										<h:inputText styleClass="form-control" value="#{configurations.value}" />
									</td>
										
								</tr>
								<tr>
									<th width="15%">#{msgs.label_comment}</th>
									<td width="20%" colspan="1" >
										<h:inputTextarea styleClass="form-control" style="" value="#{configurations.comment}" />
									</td>
									
								</tr>
							</table>
						</h:panelGroup>
					</td>
				</tr>
				<tr>
					<td width="100%" height="5" />
				</tr>
				<tr>
					<td width="100%">
						<table class="actionsSection" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td width="100%">
									<h:commandButton styleClass="btn btn-default" id="searchBtn" value="&#xf002; #{msgs.label_search} " action="#{configurations.search()}">
										<f:ajax render="configurationFormId:notifyMessagesId configurationFormId:ConfigPaneId" execute="configurationFormId:searchContainerId"/>
									</h:commandButton>
								</td>
							</tr>
						</table>
					</td>
				</tr>
				<tr>
					<td width="100%" height="5" />
				</tr>
				<tr>
					<td>
						<h:panelGroup id="ConfigPaneId">
							<table width="100%">
								<tr>
									<td>
										<h:inputHidden id="ConfigListSize" value="#{configurations.infoSysConfigListSize}" />
										<p:dataTable reflow="true" tableStyle="table-layout: auto" paginator="true" style="width:100%;" id="ConfigsList" rowIndexVar="index" rows="10" var="config" value="#{configurations.infoSysConfigs}" rendered="#{not empty configurations.infoSysConfigs}" rowHover="true">
											<p:column styleClass='centerText'>
												<f:facet name="header">#</f:facet>
			                                    #{index + 1}
	                                   		</p:column>
											<p:column styleClass='centerText'>
												<f:facet name="header">#{msgs.label_code}</f:facet>
												<h:inputText styleClass="form-control" id="configCodeEditId" value="#{config.code}" />
											</p:column>
											<p:column styleClass='centerText'>
												<f:facet name="header">#{msgs.label_value}</f:facet>
												<h:inputTextarea style="width:90%" styleClass="form-control" rows="3" id="configValueEditId" value="#{config.value}" />
											</p:column>
											<p:column styleClass='centerText'>
												<f:facet name="header">#{msgs.label_comment}</f:facet>
												<h:inputTextarea style="width:90%" styleClass="form-control" rows="3" id="configCommentEditId" value="#{config.comment}" />
											</p:column>
											<p:column styleClass='centerText'>
												<f:facet name="header">
													<h:outputText value="#{msgs.label_save}" />
												</f:facet>
												<h:commandButton id="saveFlightId" value="&#xf0c7;" styleClass="btn btn-trans-icon" action="#{configurations.saveConfig(config)}">
													<f:ajax render="configurationFormId:notifyMessagesId configurationFormId:ConfigPaneId" execute="configurationFormId:ConfigPaneId"/>
												</h:commandButton>
											</p:column>
										</p:dataTable>
									</td>
								</tr>
							</table>
						</h:panelGroup>
					</td>
				</tr>
			</table>
		</ui:decorate>
	</h:form>
</h:body>
</html>