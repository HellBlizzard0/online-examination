<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:p="http://primefaces.org/ui" xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core" xmlns:util="http://java.sun.com/jsf/composite/util">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

	<h:outputStylesheet library="css" name="styles.css" />
	<h:outputStylesheet library="css" name="grid.css" />
	<h:outputStylesheet library="css" name="bootstrap.css" />

	<h:outputScript name="utilities.js" library="javascript" target="head" />
	<script type="text/javascript">
	function employeeInfoSysDetails(contextPath, socialId){
		openEmployeeInfoSysDetailsBySocialId(contextPath, socialId);
		return false;
	}

	function releaseMask(){
		unMaskScreen();
   	}
     </script>
</h:head>
<h:body styleClass="screenBg">
	<h:form id="formId" dir="#{msgs.dir}">
		<ui:decorate template="/Main/Template.xhtml">
			<table border="0" cellpadding="0" cellspacing="0" width="100%">
				<tr>
					<td width="100%" height="0" />
				</tr>

				<tr>
					<td class="screenTitle">#{msgs.title_employeeActivites}</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td colspan="2">
						<table class="sectionTitle" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:outputText value="#{msgs.label_searchData}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<h:panelGroup id="searchContainerId">
							<table class="sectionContent" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<th width="15%">#{msgs.label_socialId}</th>
									<td width="35%">
										<h:inputText styleClass="form-control" value="#{employeeActivites.searchSocialId}" onkeypress="return checkDigit(event)" />
									</td>
									<th width="15%">#{msgs.label_name}</th>
									<td width="35%">
										<h:inputText styleClass="form-control" value="#{employeeActivites.searchName}" />
									</td>
								</tr>
								<tr>
									<th width="15%">#{msgs.label_activityClass}</th>
									<td width="35%">
										<h:selectOneMenu class="form-control" value="#{employeeActivites.searchClassDescription}">
											<f:selectItem itemValue="-1" itemLabel="#{msgs.label_all}" />
											<f:selectItems value="#{employeeActivites.classesList}" var="row" itemLabel="#{row.description}" itemValue="#{row.description}" />
											<f:ajax listener="#{employeeActivites.updateDomainList}" execute="@this" render="formId:searchDomainOneMenuId" />
										</h:selectOneMenu>
									</td>
									<th width="15%">#{msgs.label_activityDomain}</th>
									<td width="35%">
										<h:selectOneMenu id="searchDomainOneMenuId" class="form-control" value="#{employeeActivites.searchDomainDescription}">
											<f:selectItem itemValue="-1" itemLabel="#{msgs.label_all}" />
											<f:selectItems id="activityDomainMenuId" value="#{employeeActivites.domainsList}" var="row" itemLabel="#{row.description}" itemValue="#{row.description}" />
										</h:selectOneMenu>
									</td>
								</tr>
								<tr>
									<th width="15%">#{msgs.label_activityTimeFrom}</th>
									<td width="35%">
										<util:advancedHijriDate value="#{employeeActivites.searchFromDate}" />
									</td>
									<th width="15%">#{msgs.label_activityTimeTo}</th>
									<td width="35%">
										<util:advancedHijriDate value="#{employeeActivites.searchToDate}" />
									</td>
								</tr>
								<tr>
									<th width="15%">#{msgs.label_additionalNotes}</th>
									<td width="35%">
										<h:inputText styleClass="form-control" value="#{employeeActivites.searchNotes}" />
									</td>
								</tr>
							</table>
						</h:panelGroup>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td width="100%">
						<table class="actionsSection" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:commandButton styleClass="btn btn-default" id="printBtn" value="&#xf02f; #{msgs.label_print}" action="#{employeeActivites.printResults()}">
									</h:commandButton>
									<h:commandButton styleClass="btn btn-default" id="resetBtn" value=" &#xf021; #{msgs.label_reset}" action="#{employeeActivites.init()}">
										<f:ajax render="formId:searchContainerId" />
									</h:commandButton>
									<h:commandButton styleClass="btn btn-default" id="searchBtn" value="&#xf002; #{msgs.label_search} " action="#{employeeActivites.search()}">
										<f:ajax render="formId:classesList formId:searchContainerId" execute="formId:searchContainerId" />
									</h:commandButton>
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td>
						<table width="100%">
							<tr>
								<td colspan="2">
									<table class="sectionTitle" border="0" cellpadding="0" cellspacing="0">
										<tr>
											<td>
												<h:outputText value="#{msgs.label_classes}" />
											</td>
										</tr>

									</table>
								</td>
							</tr>

							<tr>
								<td width="100%" height="5" />
							</tr>

							<tr>
								<td>
									<p:dataTable reflow="true" tableStyle="table-layout: auto" paginator="true" style="width:100%;" id="classesList" rowIndexVar="index" rows="10" var="row" value="#{employeeActivites.employeeActivityDataList}" rowHover="true">
										<p:column styleClass='centerText'>
											<f:facet name="header">
												#
											</f:facet>
		                                    #{index + 1}
                                   		</p:column>
										<p:column styleClass='centerText' sortBy="#{row.socialId}">
											<f:facet name="header">
												#{msgs.label_socialId}
											</f:facet>
											<h:outputText value="#{row.socialId}" />
											<h:commandButton styleClass="btn btn-trans-icon" value="&#xf05a;" onclick="return employeeInfoSysDetails('#{request.contextPath}', '#{row.socialId}');">
												<f:ajax />
											</h:commandButton>
										</p:column>
										<p:column styleClass='centerText' sortBy="#{row.fullName}">
											<f:facet name="header">
												#{msgs.label_name}
											</f:facet>
											<h:outputText value="#{row.fullName}" />
										</p:column>
										<p:column styleClass='centerText' sortBy="#{row.activityClass}">
											<f:facet name="header">
												#{msgs.label_activityClass}
											</f:facet>
											<h:outputText value="#{row.activityClass}" />
										</p:column>
										<p:column styleClass='centerText' sortBy="#{row.activityDomain}">
											<f:facet name="header">
												#{msgs.label_activityDomain}
											</f:facet>
											<h:outputText value="#{row.activityDomain}" />
										</p:column>
										<p:column styleClass='centerText' sortBy="#{row.activityDateString}">
											<f:facet name="header">
												#{msgs.label_activityDate}
											</f:facet>
											<h:outputText value="#{row.activityDateString}" />
										</p:column>
										<p:column styleClass='centerText' sortBy="#{row.activityTime}">
											<f:facet name="header">
												#{msgs.label_activityPeriod}
											</f:facet>
											<h:outputText value="#{row.activityTime}" />
										</p:column>
										<p:column styleClass='centerText' sortBy="#{row.notes}">
											<f:facet name="header">
												#{msgs.label_additionalNotes}
											</f:facet>
											<h:outputText value="#{row.notes}" />
										</p:column>
									</p:dataTable>
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
		</ui:decorate>
	</h:form>
</h:body>
</html>