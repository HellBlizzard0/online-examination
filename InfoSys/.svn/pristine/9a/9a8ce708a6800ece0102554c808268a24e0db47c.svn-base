<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:p="http://primefaces.org/ui" xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core" xmlns:util="http://java.sun.com/jsf/composite/util">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<h:outputStylesheet library="css" name="styles.css" />
	<h:outputStylesheet library="css" name="grid.css" />
	<h:outputStylesheet library="css" name="bootstrap.css" />

	<h:outputScript name="utilities.js" library="javascript" target="head" />
	<script type="text/javascript">
	var mode;
	function getDepartment(){
		mode=1;
		openDepartmentsMiniSearch('#{request.contextPath}', 1, null, null);
		return false;
	}
	
	function getEmployee() {
		mode = 2;
		openEmpsMiniSearch('#{request.contextPath}', 1);
		return false;
	}
	function getRegionDepartment(contextPath,m){
    	mode = 3;
		openDepartmentsMiniSearch(contextPath,m, null, '#{employeeAssignmentSearch.departmentType}');
		return false;
	}
	
	function HandlePopupResult(ret) {
	   	unMaskScreen();
		if(ret!=null){ 
			if (mode==1) {
				document.getElementById('formId:selectedDepartmentIdId').value=ret[0];
         		document.getElementById('formId:selectedDepartmentNameId').innerHTML=ret[1];
         		document.getElementById('formId:selectedDepartmentNameHiddenId').value=ret[1];
         	} else if (mode==2) {
	         	document.getElementById('formId:selectedEmployeeIdId').value=ret[0];
		      	document.getElementById('formId:selectedEmployeeNameId').innerHTML=ret[1];
		      	document.getElementById('formId:selectedEmployeeNameHiddenId').value=ret[1];
         	}
         	else if (mode == 3){
				document.getElementById('formId:selectedDepartId').value = ret[0];
   	         	document.getElementById('formId:selectedDepartNameId').value = ret[1];
   	         	document.getElementById('formId:departNameId').innerHTML = ret[1];
			}
			return true;
		}
		return false;
	}
	
	function releaseMask(){
		unMaskScreen();
   	}
	
	function validateTime(time){
		var min = time.value.substring(0, 2);
		var sec = time.value.substring(3, 5);
		/* <![CDATA[ */
		if(min != parseInt(min) || sec != parseInt(sec) || parseInt(min) > 23 || parseInt(sec) > 59){
			time.value = "";
			return false;
		}
		 /* ]]> */
		return true;
	}
	 </script>
</h:head>
<h:body styleClass="screenBg">
	<h:form id="formId" dir="#{msgs.dir}">
		<ui:decorate template="/Main/Template.xhtml">
			<table border="0" cellpadding="0" cellspacing="0" width="100%">
				<tr>
					<td class="screenTitle">#{msgs.title_visitorsEntranceSearch}</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>
				
				<tr>
					<td colspan="2">
						<table class="sectionTitle" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:outputText value="#{msgs.label_searchData}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>
				
				<tr>
					<td>
						<h:panelGroup id="searchContainerId">
							<table class="sectionContent" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<th width="15%">
										#{msgs.label_name}
									</th>
									<td width="20%">
										<h:inputText styleClass="form-control" value="#{visitorsEntranceSearch.visitorEntranceData.visitorName}" maxlength="255" />
									</td>
									
									<td width="15%">
									</td>
									
									<th width="15%">
										#{msgs.label_fromDate}
									</th>
									<td width="20%">
										<util:advancedHijriDate value="#{visitorsEntranceSearch.fromDate}" />
									</td>
								</tr>
								
								<tr>
									<th width="15%">
										#{msgs.label_employeeToVisit}
									</th>
									<td width="20%">
										<h:commandButton value="&#xf002;" styleClass="btn btn-trans-icon" onclick="return getEmployee();" />
										<h:inputHidden id="selectedEmployeeIdId" value="#{visitorsEntranceSearch.visitorEntranceData.employeeId}" />
										<h:outputText id="selectedEmployeeNameId" value="#{visitorsEntranceSearch.employeeName}" />
										<h:inputHidden id="selectedEmployeeNameHiddenId" value="#{visitorsEntranceSearch.employeeName}" />
									</td>
									
									<td width="15%">
									</td>
									
									<th width="15%">
										#{msgs.label_toDate}
									</th>
									<td width="20%">
										<util:advancedHijriDate value="#{visitorsEntranceSearch.toDate}" />
									</td>
								</tr>
								
								<tr>
									<th width="15%">
										#{msgs.label_departmentToVisit}
									</th>
									<td width="20%">
										<h:commandButton value="&#xf002;" styleClass="btn btn-trans-icon" onclick="return getDepartment();" />
										<h:inputHidden id="selectedDepartmentIdId" value="#{visitorsEntranceSearch.visitorEntranceData.departmentId}" />
										<h:outputText id="selectedDepartmentNameId" value="#{visitorsEntranceSearch.visitorEntranceData.departmentName}" />
										<h:inputHidden id="selectedDepartmentNameHiddenId" value="#{visitorsEntranceSearch.visitorEntranceData.departmentName}" />
									</td>
									
									<td width="15%">
									</td>
									
									<th width="15%">
										#{msgs.label_fromTime}
									</th>
									<td width="20%">
										<p:inputMask style=" direction: ltr; text-align: right; width: 60%" value="#{visitorsEntranceSearch.fromTime}" mask="99:99" onblur="return validateTime(this)" />
									</td>
								</tr>
								
								<tr>
									<th width="15%">
										#{msgs.label_visitorCardNumber}
									</th>
									<td width="20%">
										<h:inputText styleClass="form-control" value="#{visitorsEntranceSearch.visitorEntranceData.visitorCardNumber}" maxlength="20" />
									</td>
									
									<td width="15%">
									</td>
									
									<th width="15%">
										#{msgs.label_toTime}
									</th>
									<td width="20%">
										<p:inputMask style=" direction: ltr; text-align: right; width: 60%" value="#{visitorsEntranceSearch.toTime}" mask="99:99" onblur="return validateTime(this)" />
									</td>
								</tr>
								
								<tr>
									<th width="15%">
										#{msgs.label_identity}
									</th>
									<td width="20%">
										<h:inputText styleClass="form-control inputnumber" value="#{visitorsEntranceSearch.visitorEntranceData.visitorIdentity}" maxlength="10" onkeypress="return checkDigit(event)" />
									</td>
									
									<td width="15%">
									</td>
									
									<th width="15%">
										#{msgs.label_type}
									</th>
									<td width="20%">
										<h:selectOneMenu class="form-control" value="#{visitorsEntranceSearch.entryExitFlag}">
											<f:selectItem noSelectionOption="true" itemValue="#{null}" itemLabel="#{msgs.label_all}" />
											<f:selectItem itemValue="true" itemLabel="#{msgs.label_entry}" />
											<f:selectItem itemValue="false" itemLabel="#{msgs.label_exit}" />
										</h:selectOneMenu>
									</td>
								</tr>	
								
								<tr>
								
								<th width="15%">
										#{msgs.label_region}
										<h:commandButton rendered="#{visitorsEntranceSearch.loginEmpRegionId == null}" value="&#xf002;" styleClass="btn btn-trans-icon" onclick="return getRegionDepartment('#{request.contextPath}',2);" title="#{msgs.label_addDepartment}" />
									</th>
									<td width="20%">
										<h:inputHidden id="selectedDepartId" value="#{visitorsEntranceSearch.loginEmpRegionId}" />
										<h:inputHidden id="selectedDepartNameId" value="#{visitorsEntranceSearch.loginEmpRegionName}" />
										<h:outputText id="departNameId" value="#{visitorsEntranceSearch.loginEmpRegionName}" />
									</td>
								</tr>	
							</table>
						</h:panelGroup>
					</td>
				</tr>
				
				<tr>
					<td width="100%" height="5" />
				</tr>

				<tr>
					<td width="100%">
						<table class="actionsSection" border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<h:commandButton id="printBtnId" value="&#xf02f; #{msgs.label_print}" styleClass="btn btn-success" action="#{visitorsEntranceSearch.print()}"/>
									
									<h:commandButton styleClass="btn btn-default" id="resetBtnId" value="&#xf021; #{msgs.label_reset}" action="#{visitorsEntranceSearch.reset()}">
										<f:ajax render="formId:searchContainerId" />
									</h:commandButton>

									<h:commandButton styleClass="btn btn-default" id="searchBtnId" value="&#xf002; #{msgs.label_search}" action="#{visitorsEntranceSearch.search()}">
										<f:ajax render="formId:visitorEntranceDataTableId" execute="formId:searchContainerId" />
									</h:commandButton>
								</td>
							</tr>
						</table>
					</td>
				</tr>

				<tr>
					<td width="100%" height="5" />
				</tr>
				
				<tr>
					<td>
						<p:dataTable reflow="true" tableStyle="table-layout: auto" paginator="true" id="visitorEntranceDataTableId" rows="10" rowIndexVar="index" var="row" value="#{visitorsEntranceSearch.visitorEntranceList}" rowHover="true">
							<p:column styleClass='centerText'>
								<f:facet name="header">#</f:facet>
                                #{index + 1}
                            </p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_identity} </f:facet>
								<h:outputText value="#{row.visitorIdentity}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_name} </f:facet>
								<h:outputText value="#{row.visitorName}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_visitorCardNumber} </f:facet>
								<h:outputText value="#{row.visitorCardNumber}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_nationality} </f:facet>
								<h:outputText value="#{row.visitorCountryName}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_departmentToVisit} </f:facet>
								<h:outputText value="#{row.departmentName}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_entryDateAndTime} </f:facet>
								<h:outputText value="#{row.entryDateString} #{row.entryTime}" />
							</p:column>
							<p:column styleClass='centerText'>
								<f:facet name="header">#{msgs.label_exitDateAndTime} </f:facet>
								<h:outputText value="#{row.exitDateString} #{row.exitTime}" />
							</p:column>
						</p:dataTable>
					</td>
				</tr>
				
				<tr>
					<td width="100%" height="5" />
				</tr>
			</table>
		</ui:decorate>
	</h:form>
</h:body>
</html>