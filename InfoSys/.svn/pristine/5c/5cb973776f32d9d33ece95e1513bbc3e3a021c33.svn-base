<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html" xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:prime="http://primefaces.org/ui">
<h:head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<h:outputStylesheet library="css" name="grid.css" />
	<h:outputStylesheet library="css" rendered="#{msgs.dir == 'rtl'}" name="styles.css" />

	<h:outputStylesheet name="grid/grid.css" library="primefaces" />
	<h:outputStylesheet name="bootstrap.css" library="css" />
	<h:outputScript name="utilities.js" library="javascript" target="head" />



</h:head>
<h:body styleClass="screenBg" style="overflow-x: hidden;">
	<h:form id="welcomeForm" dir="#{msgs.dir}" styleClass="ui-grid ui-grid-responsive ">
		<ui:decorate template="/Main/Template.xhtml">
			<table border="0" cellpadding="0" cellspacing="0" width="100%">
				<tr>
					<td width="100%" height="10" />
				</tr>

				<tr>
					<td>
						<table class="actionsSection" style="text-align: right !important;" border="0" cellpadding="0" cellspacing="0" width="100%">
							<tr>
								<td>
									<br />
									<h:commandButton styleClass="btn btn-default" value="&#xf21b; #{msgs.title_securityStatus}" action="#{welcome.openSecurityStatusScreen()}" rendered="#{welcome.superAdmin or welcome.user}" />
									<h:commandButton styleClass="btn btn-default" value="&#xf0c0; #{msgs.title_securityStatusManagement}" action="#{welcome.openSecurityManagementScreen()}" rendered="#{welcome.superAdmin or welcome.admin}" />
									<h:commandButton styleClass="btn btn-default" value="&#xf0c0; #{msgs.title_adminManagement}" action="#{welcome.openAdminManagementScreen()}" rendered="#{welcome.superAdmin}" />
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
		</ui:decorate>
	</h:form>
	<style>
#body {
	background: url("../resources/images/welcomeScreen.jpeg");
}
</style>
</h:body>
</html>